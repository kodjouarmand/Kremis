@model InvoicePaymentViewModel

<form method="post">
    <input type="hidden" asp-for="InvoicePayment.Id" />
    <div class="input-group-sm col-7 pt-4">
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Référence
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.Number" class="form-control font-weight-bold" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Date
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.Date" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Nom du client
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.InvoiceHeader.Customer.Name" class="form-control font-weight-bold" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Contact du client
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.InvoiceHeader.Customer.PhoneNumber" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Montant payé
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.AmountPaid" class="form-control text-right font-weight-bold" asp-format="{0:N0}" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Mode de règlement
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.PaymentMode.DisplayText" class="form-control" disabled />
            </div>
        </div>
        @if (!string.IsNullOrWhiteSpace(Model.InvoicePayment.TransactionNumber))
        {
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    N° de transaction
                </div>
                <div class="input-group-sm col-4">
                    <input asp-for="InvoicePayment.TransactionNumber" class="form-control" disabled />
                </div>
            </div>
        }
        <hr />
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                N° de la facture
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.InvoiceHeader.Number" class="form-control font-weight-bold" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Montant net à payer
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.InvoiceHeader.NetAmountToPay" class="form-control text-right" asp-format="{0:N0}" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Montant avancé
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.InvoiceHeader.AdvancedAmount" class="form-control text-right" asp-format="{0:N0}" disabled />
            </div>
        </div>
        <div class="form-group row mt-n2">
            <div class="input-group-sm col-4">
                Montant restant à payer
            </div>
            <div class="input-group-sm col-4">
                <input asp-for="InvoicePayment.InvoiceHeader.RemainingAmountToPay" class="form-control text-right font-weight-bold" asp-format="{0:N0}" disabled />
            </div>
        </div>        
    </div>
</form>
