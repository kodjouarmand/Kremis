@model InvoiceHeaderViewModel

<form method="post">
    <input type="hidden" asp-for="InvoiceHeader.Id" />
    <div class="row">
        <div class="input-group-sm col-7 pt-1">
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Numéro
                </div>
                <div class="input-group-sm col-3">
                    <input asp-for="InvoiceHeader.Number" class="form-control font-weight-bold" disabled />
                </div>
            </div>
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Statut
                </div>
                @if (Model.InvoiceHeader.Status == EnumHelper.ToString(StatusEnum.Unpaid))
                {
                    <div class="input-group-sm col-3">
                        <input asp-for="InvoiceHeader.Status" class="form-control bg-gradient text-white font-weight-bold" style="background-color:red" disabled />
                    </div>
                }
                else if (Model.InvoiceHeader.Status == EnumHelper.ToString(StatusEnum.Paid))
                {
                    <div class="input-group-sm col-3">
                        <input asp-for="InvoiceHeader.Status" class="form-control bg-gradient text-white font-weight-bold" style="background-color:green" disabled />
                    </div>
                }
                else
                {
                    <div class="input-group-sm col-3">
                        <input asp-for="InvoiceHeader.Status" class="form-control bg-gradient text-white font-weight-bold" style="background-color: lightseagreen" disabled />
                    </div>
                }
            </div>
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Date
                </div>
                <div class="input-group-sm col-3">
                    <input asp-for="InvoiceHeader.Date" class="form-control" disabled />
                </div>
            </div>
            @if (Model.InvoiceHeader.PaymentDueDate != null)
            {
                <div class="form-group row mt-n2">
                    <div class="input-group-sm col-4">
                        Echéance
                    </div>
                    <div class="input-group-sm col-3">
                        <input asp-for="InvoiceHeader.PaymentDueDate" class="form-control" disabled />
                    </div>
                </div>
            }
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Client
                </div>
                <div class="input-group-sm col-5">
                    <input asp-for="InvoiceHeader.Customer.Name" class="form-control font-weight-bold" disabled />
                </div>
            </div>
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Apporteur
                </div>
                <div class="input-group-sm col-5">
                    <input asp-for="InvoiceHeader.BusinessPartner.Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Type de commission
                </div>
                <div class="input-group-sm col-3">
                    <input asp-for="InvoiceHeader.CommissionType" class="form-control" disabled />
                </div>
            </div>

            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Valeur commission
                </div>
                <div class="input-group-sm col-3">
                    <input asp-for="InvoiceHeader.CommissionUnitValue" class="form-control text-right" asp-format="{0:N0}" disabled />
                </div>
            </div>
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Montant commission
                </div>
                <div class="input-group-sm col-3">
                    <input asp-for="InvoiceHeader.CommissionToPay" class="form-control text-right bg-gradient font-weight-bold" style="background-color:silver" asp-format="{0:N0}" disabled />
                </div>
            </div>
            <div class="form-group row mt-n2">
                <div class="input-group-sm col-4">
                    Commentaire
                </div>
                <div class="input-group-sm col-5">
                    <textarea asp-for="InvoiceHeader.Comment" class="form-control" disabled></textarea>
                </div>
            </div>
        </div>
        <div class="input-group-sm col-5 pt-1">
            <div id="detail-view">
                @await Html.PartialAsync("_Detail", Model)
            </div>
            <div id="footer-view">
                @await Html.PartialAsync("_Footer", Model)
            </div>
        </div>
    </div>
</form>